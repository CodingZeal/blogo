<h1 class="admin-header">Posts</h1>

<table class="pure-table pure-table-striped">
  <thead>
    <tr>
      <th><%= 'Title' %></th>
      <th><%= 'Status' %></th>
      <th><%= 'Author' %></th>
      <th><%= 'Published on' %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post|%>
      <%= render partial: 'post_li', locals: {post: post} %>
    <% end %>
  </tbody>
</table>
