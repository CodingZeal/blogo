<%= form_tag admin_sessions_path, class: 'pure-form pure-form-stacked' do %>
  <fieldset>

    <legend>Login</legend>

    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>

    <%= label_tag :password %>
    <%= password_field_tag :password %>

    <%= submit_tag "Login", class: 'pure-button' %>
  <fieldset>
<% end %>
